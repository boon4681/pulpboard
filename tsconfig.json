{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "ES6",
            "ES2020"
        ],
        "declaration": true,
        "module": "CommonJS",
        "esModuleInterop": true,
        "declarationMap": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule":true,
        "outDir": "./dist",
        "paths": {
            "pulpboard":["./test/*"]
        }
    },
    "include": [
        "./src",
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}