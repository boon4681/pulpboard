{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "ES6",
            "ES2020"
        ],
        "module": "CommonJS",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "moduleResolution": "node",
        "outDir": "./dist"
    },
    "include": [
        "./src",
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}